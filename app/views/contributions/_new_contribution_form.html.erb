<div class="modal fade" id="contribution" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for @contribution, url: "", remote: true do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title" id="myModalLabel">Contribution</h4>
        </div>
        <div class="modal-body">
          <div class="form_content">
            <%= f.label :amount%>
            <%= f.number_field :amount, autofocus: true, class: "form-control", id: "exampleInputEmail1", placeholder: "Enter Contribution", required: ""%>
            <br />
            <%= f.label :description%>
            <%= f.text_area :description, autofocus: true, class: "form-control", id: "exampleInputEmail1", placeholder: "Enter Description", required: "" %>
          </div>
          <h3 class="success_msg" style="display:none">Saved Successfully!</h3>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit "Save changes", type: "submit", class: "btn btn-primary" %>
          <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
        </div>
      <%end%>
      <div class="overlay" style="display:none;position: absolute;width: 100%;height: 100%;background: gray;top: 0;opacity: 0.4;"></div>
    </div>
  </div>
</div>