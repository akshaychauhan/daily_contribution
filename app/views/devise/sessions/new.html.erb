<div id="page_content" class="row">
	<h2 class="col-xs-6">Sign in</h2>
  <div class="row show-grid"></div>
  <div class="col-xs-6">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), role: "form") do |f| %>
    <div class="form-group">
      <%= f.label :email%><br />
  	  <%= f.email_field :email, autofocus: true, type: "email", class: "form-control", id: "exampleInputEmail1", placeholder: "Enter email", required: ""%>
	  </div>
    <div class="form-group">
      <%= f.label :password %><br />
	    <%= f.password_field :password, autocomplete: "off", type: "password", class: "form-control", id: "exampleInputPassword1", placeholder: "Password", required: ""%>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
        <%= f.check_box :remember_me %> 
        <%= f.label :remember_me %>
      </div>
    <% end -%>
	  <div><%= f.submit "Sign in", class: "btn btn-default" %></div>
	<% end %>
  </div>
  </div>
	<%= render "devise/shared/links" %>
</div>
